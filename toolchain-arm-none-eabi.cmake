set(CMAKE_SYSTEM_NAME Generic)
set(CMAKE_SYSTEM_PROCESSOR ARM)

if(${CMAKE_VERSION} VERSION_EQUAL "3.6.9" OR ${CMAKE_VERSION} VERSION_GREATER
                                             "3.6")
  # list(APPEND CMAKE_TRY_COMPILE_PLATFORM_VARIABLES GCC_ARM_DIR)
  set(CMAKE_TRY_COMPILE_TARGET_TYPE STATIC_LIBRARY)
else()
  # if(GCC_ARM_DIR) set(ENV{_GCC_ARM_DIR} "${GCC_ARM_DIR}") else()
  # set(GCC_ARM_DIR "$ENV{_GCC_ARM_DIR}") endif()
  set(CMAKE_EXE_LINKER_FLAGS_INIT "--specs=nosys.specs")
endif()

set(CMAKE_C_COMPILER ${CMAKE_CURRENT_LIST_DIR}/bin/arm-none-eabi-gcc)
set(CMAKE_CXX_COMPILER ${CMAKE_CURRENT_LIST_DIR}/bin/arm-none-eabi-g++)

set(CMAKE_OBJCOPY
    ${CMAKE_CURRENT_LIST_DIR}/bin/arm-none-eabi-objcopy
    CACHE INTERNAL "objcopy tool")
set(CMAKE_SIZE_UTIL
    ${CMAKE_CURRENT_LIST_DIR}/bin/arm-none-eabi-size
    CACHE INTERNAL "size tool")

set(CMAKE_C_FLAGS_DEBUG_INIT
    "-g3 -O0 -Wall -Wextra -Wshadow -Wdouble-promotion -pedantic -DDEBUG")
set(CMAKE_C_FLAGS_DEBUG
    "${CMAKE_C_FLAGS_DEBUG_INIT}"
    CACHE STRING "" FORCE)
set(CMAKE_C_FLAGS_RELEASE_INIT "-O3 -Wall")
set(CMAKE_C_FLAGS_RELEASE
    "${CMAKE_C_FLAGS_RELEASE_INIT}"
    CACHE STRING "" FORCE)
set(CMAKE_C_FLAGS_MINSIZEREL_INIT "-Os -Wall")
set(CMAKE_C_FLAGS_MINSIZEREL
    "${CMAKE_C_FLAGS_MINSIZEREL_INIT}"
    CACHE STRING "" FORCE)
set(CMAKE_C_FLAGS_RELWITHDEBINFO_INIT "-O2 -g -Wall")
set(CMAKE_C_FLAGS_RELWITHDEBINFO
    "${CMAKE_C_FLAGS_RELWITHDEBINFO_INIT}"
    CACHE STRING "" FORCE)

set(CMAKE_SYSROOT ${CMAKE_CURRENT_LIST_DIR})
set(CMAKE_FIND_ROOT_PATH ${CMAKE_CURRENT_LIST_DIR}/bin)
set(CMAKE_FIND_ROOT_PATH_MODE_PROGRAM NEVER)
set(CMAKE_FIND_ROOT_PATH_MODE_LIBRARY ONLY)
set(CMAKE_FIND_ROOT_PATH_MODE_INCLUDE ONLY)
set(CMAKE_FIND_ROOT_PATH_MODE_PACKAGE ONLY)
